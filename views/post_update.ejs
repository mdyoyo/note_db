<%- include header %>
<div class="text-center">
	<label style="font-size:30px;text-align: center;color: #dca7a7;"><%= title %></label>
</div>
	<div class="container">

			<div style="margin-left: 10px;margin-right: 10px;">
				<form class="form-horizontal" method="post" role="form">
					<input name="_id" type="hidden" value="<%= art._id %>">
					<div class="form-group">
						<label class="text-left col-sm-10">标题：</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" name="title"
							   placeholder="标题" value="<%= art.title %>">
						</div>
					</div>
					<div class="form-group">
						<label class="text-left col-sm-10">标签：</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" name="tag"
							   placeholder="标签" value="<%= art.tag %>">
						</div>
					</div>
					<div class="form-group">
						<label class="text-left col-sm-10">内容：</label>
						<div class="col-sm-10">
							<textarea class="form-control" name="content"
								  placeholder="文章内容">
								<%= art.content %>
							</textarea>
						</div>
					</div>

					<button type="submit" class="btn btn-info center-block">

							<span class="glyphicon glyphicon-floppy-save"></span> 保存
					</button>
				</form>
			</div>

	</div>
<%- include footer %>