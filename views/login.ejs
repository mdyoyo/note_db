<%- include header %>
<div class="text-center page-title">用户登录</div>
<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4">
			<form method="post">
				<div class="form-group">
					<input type="text" class="form-control" name="username" id="username" placeholder="用户名">
				</div>
				<div class="form-group">
					<input type="password" class="form-control" name="password" id="password" placeholder="密码">
				</div>
				<span class="help-block" id="_hint"></span>
				<button type="button" onclick="checkLogin()" class="btn btn-default center-block">登录</button>
			</form>
		</div>
	</div>
</div>
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
	function checkLogin(){
		var uname = $('#username').val();
		var pwd = $('#password').val();
		var temp = document.getElementById("_hint");
		var data = {"uname":uname,"pwd":pwd};
		$.getJSON("check_login",data,
				function(data) {
					if(!(data.status))
					{
						temp.className = "register_check_hint_error";
						temp.innerHTML = "用户名或密码错误";
					}
					else{
						temp.className = "register_check_hint_ok";
						temp.innerHTML = "登录成功";
						window.location.href = '/';
					}
				});
	}
</script>
